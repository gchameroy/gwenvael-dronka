<div class="row">
    {% for settingCounter in settingCounters %}
        <div class="col-md-3">
            <div class="widget widget-counter style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <h3>{{ settingCounter.counter.label }}</h3>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h2 class="font-bold">
                            <a class="text-white" href="{{ path('admin_counter_edit', {'id': settingCounter.id}) }}">{{ settingCounter.value }}</a>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
