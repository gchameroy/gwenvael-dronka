{% extends 'admin/layout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% import 'admin/macro/forms.html.twig' as forms %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-8">
            <h2>Editer une image</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_dashboard') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('admin_prices') }}">Liste des tarifs</a>
                </li>
                <li>
                    <a href="{{ path('admin_price_images', {'id': image.price.id}) }}">Liste des images</a>
                </li>
                <li class="active">
                    <strong>Editer une image</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                    {{ form_widget(form) }}
                    {{ forms.submit('Enregistrer', 'info') }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
