{% extends 'admin/layout.html.twig' %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-8">
            <h2>SEO</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_dashboard') }}">Dashboard</a>
                </li>
                <li class="active">
                    <strong>SEO</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h4>SEO</h4>
                </div>
                <div class="ibox-content" id="ibox-pages">
                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                            {% for pageStatic in pagesStatic %}
                                <tr class="row-page">
                                    <td><strong>{{ pageStatic.titleSEO }}</strong></td>
                                    <td>{{ pageStatic.descriptionSEO }}</td>
                                    <td>
                                        <a href="{{ path('admin_seo_edit', {'id': pageStatic.id }) }}" class="btn btn-info btn-sm">Editer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
