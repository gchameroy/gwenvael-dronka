{% for block in blocks %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ibox-block">
                <div class="ibox-title">
                    <h5>{{ block.title }}</h5>
                    <div class="ibox-tools">
                        <a href="{{ path('admin_page_block_edit', {'id': block.id }) }}" class="btn btn-white">
                            <i class="fa fa-pencil text-info"></i>
                        </a>
                        <form class="inline" action="{{ url('admin_page_block_delete', {'id': page.id}) }}" method="post">
                            <input type="hidden" name="token" value="{{ csrf_token('page-block-delete') }}" />
                            <input type="hidden" name="id" value="{{ block.id }}" />
                            <button type="submit" class="btn btn-white">
                                <i class="fa fa-trash text-danger"></i>
                            </button>
                        </form>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-7">
                            {{ render(controller('AppBundle:Admin/PageBlockImage:list', {'id': block.id})) }}
                        </div>
                        <div class="col-md-5">
                            <h2>{{ block.title }}</h2>
                            <div class="small text-muted">{{ block.content|array2column|raw }}</div>
                            <p class="m-t-lg">
                                <a class="btn btn-white">{{ block.action.label }}</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <p class="text-center">
                    <a href="{{ path('admin_page_blocks_add', {'id': page.id}) }}" class="btn btn-primary">Ajouter un block</a>
                </p>
            </div>
        </div>
    </div>
</div>
