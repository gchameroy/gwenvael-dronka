{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-8">
            <h2>Ajouter une image</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_dashboard') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('admin_pages') }}">Liste des pages</a>
                </li>
                <li>
                    <a href="{{ path('admin_page', {'id': block.page.id}) }}">{{ block.page.title }}</a>
                </li>
                <li>
                    <a href="{{ path('admin_page_block_images_manager', {'id': block.id}) }}">Liste des images</a>
                </li>
                <li class="active">
                    <strong>Ajouter une image</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                    <div class="form-group">
                        {{ form_label(form.path, null, {'label_attr' : {'class' : 'col-lg-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.path) }}
                            {{ form_errors(form.path, {'attr' : {'class' : 'text-danger'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-10">
                            <button class="btn btn-sm btn-primary" type="submit">Ajouter</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
