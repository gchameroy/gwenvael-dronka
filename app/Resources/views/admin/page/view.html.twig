{% extends "admin/layout.html.twig" %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ page.title }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_dashboard') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('admin_pages') }}">Liste des pages</a>
                </li>
                <li class="active">
                    <strong>{{ page.title }}</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block wrapper_content %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox product-detail">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="page-images">

                                </div>
                            </div>
                            <div class="col-md-7">
                                <h2 class="font-bold m-b-xs">
                                    <span>{{ page.title }}</span>
                                </h2>
                                <hr>
                                <h4>Contenu</h4>
                                <div class="small text-muted">{{ page.description|raw }}</div>

                                <dl class="small m-t-md">
                                    <dt>Titre SEO</dt>
                                    <dd>{{ page.titleSeo }}</dd>
                                </dl>
                                <dl class="small m-t-md">
                                    <dt>Description SEO</dt>
                                    <dd>{{ page.descriptionSeo }}</dd>
                                </dl>
                                <dl class="small m-t-md">
                                    {% if page.published %}
                                        <label class="label label-info">en ligne</label>
                                    {% else %}
                                        <label class="label label-default">hors ligne</label>
                                    {% endif %}
                                </dl>
                                <dl class="small m-t-md">
                                    {% if page.published %}
                                        <form class="inline" action="{{ url('admin_page_unpublish') }}" method="post">
                                            <input type="hidden" name="token" value="{{ csrf_token('page-unpublish') }}" />
                                            <input type="hidden" name="id" value="{{ page.id }}" />
                                            <button class="btn btn-warning btn-sm" type="submit">DÃ©publier</button>
                                        </form>
                                    {% else %}
                                        <form class="inline" action="{{ url('admin_page_publish') }}" method="post">
                                            <input type="hidden" name="token" value="{{ csrf_token('page-publish') }}" />
                                            <input type="hidden" name="id" value="{{ page.id }}" />
                                            <button class="btn btn-primary btn-sm" type="submit">Publier</button>
                                        </form>
                                    {% endif %}
                                    <a href="{{ path('admin_page_edit', {'id': page.id }) }}" class="btn btn-primary btn-sm">Modifier</a>
                                    <form class="inline" action="{{ url('admin_page_delete') }}" method="post">
                                        <input type="hidden" name="token" value="{{ csrf_token('page-delete') }}" />
                                        <input type="hidden" name="id" value="{{ page.id }}" />
                                        <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                                    </form>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
