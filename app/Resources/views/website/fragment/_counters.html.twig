<section id="counter" class="overlay-dark80 light-color ptb-80" style="background-image: url('{{ asset('img/bg-counter.jpg') }}'); background-position: 0% +400px;" data-stellar-background-ratio="0.5">
    <div class="container text-center">
        <div class="row">
            {% for settingCounter in settingCounters %}
                <div class="col-sm-6 col-md-3 mb-sm-30">
                    <h1 class="counter" data-count="{{ settingCounter.value }}">0</h1>
                    <h6>{{ settingCounter.counter.label }}</h6>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
