{% block description_seo '' %}

{% block content %}
    <section id="home">
        <div class="flexslider fullscreen-carousel hero-slider-1 ">
            <ul class="slides">
                <li data-slide="dark-slide">
                    <div class="slide-bg-image overlay-dark dark-bg parallax parallax-section1" data-background-img="{{ asset('img/bg-home.jpg') }}">
                        <div class="js-Slide-fullscreen-height container">
                            <div class="intro-content">
