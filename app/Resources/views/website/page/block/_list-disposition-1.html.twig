{% for block in page.blocks %}
    <div class="row row-block" id="{{ block.slug }}">
        {% set exchange = loop.index % 2 == 0 %}
        {% if not exchange %}
            <div class="col-md-5">
                <h3>{{ block.title }}</h3>
                <div class="lead">{{ block.content|array2column|raw }}</div>
                <div class="spacer-30"></div>
                {% if block.action.id != 1 %}
                    <a href="{{ path(block.action.route) }}" class="btn btn-md btn-black">{{ block.action.label }}</a>
                {% endif %}
            </div>
        {% endif %}
        <div class="col-md-7">
            <div class="owl-carousel image-slider o-flow-hidden white">
                {% for image in block.images %}
                    <div class="item">
                        <img src="{{ asset('images/' ~ image.path) }}" alt="Une méthode douce - Gwenvael Dronka - chien - éducateur canin" />
                    </div>
                {% endfor %}
            </div>
        </div>
        {% if exchange %}
            <div class="col-md-5">
                <h3>{{ block.title }}</h3>
                <div class="lead">{{ block.content|array2column|raw }}</div>
                <div class="spacer-30"></div>
                {% if block.action.id != 1 %}
                    <a href="{{ path(block.action.route) }}" class="btn btn-md btn-black">{{ block.action.label }}</a>
                {% endif %}
            </div>
        {% endif %}
    </div>
    {% if not loop.last %}
        <div class="spacer-60"></div>
        <div class="spacer-60"></div>
    {% endif %}
{% endfor %}
